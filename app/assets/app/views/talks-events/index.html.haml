#talks-and-events.loading
  .header.main-header.follow-scroll(ng-click = '$parent.resetToTop()')
    %h1
      Talks & events
    .touch-panel
      %a.touch-icon(ng-href="/home")
        %i.icon-home
  %scrollable
    %div(ng-controller="TalksEventsCtrl")
      .content
        %p.description
          Introduction paragraph to a featured talk which may be positioned here
      .sections
        %collapsible(scroller="scroller" title='Talks' type='talks' collection='talks' item-template='assets/views/talks/talk_collapsible_item.html')
        %collapsible(scroller="scroller" title='Events' type='events' collection='events' item-template='assets/views/events/event_collapsible_item.html')