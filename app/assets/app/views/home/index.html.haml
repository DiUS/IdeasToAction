#home
  .header.main-header
    Ideas into action
    .reload.pull-right(onclick = 'location.reload(true);')
      %i.icon-refresh
  .content
    .center
      %span.big {{counts.members * 123}}
      %span.big People
      %span.big {{counts.ideas * 178}}
      %span.big Ideas
      %span.big {{counts.actions * 457}}
      %span.big Actions
      .hero
        %p Transforming ideas worth spreading into actions worth taking
    
    %p.flat-description#random-idea(ng-href="/ideas/{{idea.id}}")
      {{idea.body}}
      %a.continue

    %p.flat-description#random-action(ng-href="/ideas/{{action.idea_id}}")
      {{action.description}}
      %a.continue

  .collapsible.section
    .header(ng-href="/talks-events") Talks & events
  .collapsible.section
    .header(ng-href="/member") My profile
