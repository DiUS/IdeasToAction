#home
  .header.main-header(ng-click="scroller.scrollToPage(0, 0, 300)")
    %h1
      Ideas into action
  %scrollable
    .content.center
      %p.hero Transforming ideas worth spreading into actions worth taking
      .content-item.big(ng-href="/ideas")
        %span {{counts.ideas | number }}
        %span Ideas
      .content-item.big(ng-href="/actions")
        %span {{counts.idea_actions | number }}
        %span Actions
      .content-item.big(ng-href="/talks")
        %span {{counts.talks | number }}
        %span Talks
      .content-item.big(ng-href="/events")
        %span {{counts.events | number }}
        %span Events
    .collapsible.section
      .header(ng-href="/member") My profile
    %search(scroller="scroller")