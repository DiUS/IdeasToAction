#home
  .header.main-header.follow-scroll(ng-click = '$parent.resetToTop()')
    Ideas into action
    %span.hidden-phone(ng-controller = "AuthCtrl")
      .login-panel
        %span(ng-show = "!memberSession.loggedIn && loggedInStatusDetermined()")
          %a(ng-href = "/login")
            %i.icon-user
        %span(ng-show = "memberSession.loggedIn && loggedInStatusDetermined()")
          %i.icon-user
            {{memberSession.username}}
          %a(ng-click = "logout()")
            %i.icon-road
          %a(ng-href="/events/edit")
            %i.icon-edit
    .search-button.pull-right(ng-href = '/search')
      %i.icon-search
    .reload.pull-right(onclick = 'location.reload(true);')
      %i.icon-refresh
  .content
    .center
      %span.big 1314
      %span.big People
      %span.big 289
      %span.big Ideas
      %span.big 633
      %span.big Actions
      .hero
        %p Transforming ideas worth spreading into actions worth taking

    %p.flat-description#random-idea(ng-href="/ideas/{{idea.id}}")
      %strong.action-statement Idea
      {{idea.description}}
      %a.continue

    %p.flat-description#random-action(ng-href="/ideas/{{action.idea_id}}")
      %strong.action-statement Action
      {{action.description}}
      %a.continue

  .collapsible.section
    .header(ng-href="/talks-events") Talks & events
  .collapsible.section
    .header(ng-href="/member") My profile
