#home
  .header.main-header.follow-scroll(ng-click = '$parent.resetToTop()')
    %h1
      Ideas into action
    %span(ng-controller = "AuthCtrl")
      .touch-panel
        %span.hidden-phone(ng-show = "!memberSession.loggedIn && loggedInStatusDetermined()")
          %a(ng-href = "/login")
            %i.icon-user
        %span.hidden-phone(ng-show = "memberSession.loggedIn && loggedInStatusDetermined()")
          %i.icon-user
            {{memberSession.username}}
          %a(ng-click = "logout()")
            %i.icon-road
          %a(ng-href="/events/edit")
            %i.icon-edit
        %a.touch-icon(onclick = 'location.reload(true);')
          %i.icon-refresh
  .content
    .center
      %span.big 1314
      %span.big People
      %span.big 289
      %span.big Ideas
      %span.big 633
      %span.big Actions
      .hero
        %p Transforming ideas worth spreading into actions worth taking

    %div(ng-repeat="feature in featured.events")
      %p.flat-description(ng-href="/events/{{feature.id}}")
        %strong.action-statement Featured Event
        {{feature.name}}
        %a.continue
    %div(ng-repeat="feature in featured.talks")
      %p.flat-description(ng-href="/events/{{feature.event_id}}/talks/{{feature.id}}")
        %strong.action-statement Featured Talk
        {{feature.title}}
        %a.continue
    %div(ng-repeat="feature in featured.ideas")
      %p.flat-description(ng-href="/ideas/{{feature.id}}")
        %strong.action-statement Featured Idea
        {{feature.description}}
        %a.continue
    %div(ng-repeat="feature in featured.actions")
      %p.flat-description(ng-href="/ideas/{{feature.idea_id}}")
        %strong.action-statement Featured Action
        {{feature.description}}
        %a.continue

    %p.flat-description#random-idea(ng-href="/ideas/{{idea.id}}")
      %strong.action-statement Idea
      {{idea.description}}
      %a.continue

    %p.flat-description#random-action(ng-href="/ideas/{{action.idea_id}}")
      %strong.action-statement Action
      {{action.description}}
      %a.continue

  .collapsible.section
    .header(ng-href="/discover") Discover
  .collapsible.section
    .header(ng-href="/member") My profile
