.header.main-header
  Talk
.content.talk
  .hero{'ng-switch on' => 'talk.hero_image_url'}
    %img(ng-src="{{talk.hero_image_url}}" alt="{{talk.title}}" ng-switch-default = '')
    %span(ng-switch-when = 'null')
  %p.title
    {{talk.title}}
  %p.description
    {{talk.description}}
%collapsible(title='Ideas' type='idea' collection='talk.ideas' item-template='views/ideas/idea_collapsible_item.html')
  .center.row-fluid
    .span12
      %button#new-idea.btn.btn-large.btn-danger
        Submit a new idea
