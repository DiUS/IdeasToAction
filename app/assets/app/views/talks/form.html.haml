#talk
  %div(ng-switch="" on="!!talk.id")
    .header.main-header(ng-switch-default="")
      New Talk
    .header.main-header(ng-switch-when="true")
      Talk {{talk.title}}
  .content
    %form.form-horizontal
      %bootstrap-input(model="talk.title" key="title" description="Talk Title")
      %bootstrap-input(model="talk.description" key="description" description="Talk Description")
      %bootstrap-input(model="talk.hero_image_url" key="hero_image_url" description="Talk Hero Image URL")
      %bootstrap-input(model="talk.ted_talk_url" key="ted_talk_url" description="TED Talk URL")
          
      .control-group(ng-switch="" on="!!talk.id")
        .controls(ng-switch-default="")
          %button.btn(ng-click="create()") Create
        .controls(ng-switch-when="true")
          %button.btn(ng-click="update()") Update
          %button.btn.btn-danger(ng-click="delete()") Delete