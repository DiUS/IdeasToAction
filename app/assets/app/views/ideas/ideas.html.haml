.landing
  .header.main-header(ng-click = '$parent.resetToTop()')
    %h1
      ideas
    .touch-panel
      %a.touch-icon(ng-href="/home")
        %i.icon-home
  %scrollable
    .content(ng-href="/ideas/{{ideas.featured[0].id}}")
      %tile:featured(heading="FEATURED ideas" title="ideas.featured[0].name" description="ideas.featured[0].description" img="ideas.featured[0].hero_image_url")
      .totals
        %tile:count(count="ideas.featured[0].idea_actions_count" title="actions")
        %tile:count(count="ideas.featured[0].reactions_count" title="reactions")
    .content(ng-href="/ideas/{{ideas.popular[0].id}}")
      %tile:default(title="ideas.popular[0].name")
      .totals
        %tile:count(count="ideas.popular[0].idea_actions_count" title="actions")
        %tile:count(count="ideas.popular[0].reactions_count" title="reactions")
    .content(ng-href="/ideas/{{ideas.popular[1].id}}")
      %tile:default(title="ideas.popular[1].name")
      .totals
        %tile:count(count="ideas.popular[1].idea_actions_count" title="actions")
        %tile:count(count="ideas.popular[1].reactions_count" title="reactions")
    .content(ng-href="/ideas/{{ideas.recent[0].id}}")
      %tile:default(title="ideas.recent[0].name")
      .totals
        %tile:count(count="ideas.recent[0].idea_actions_count" title="actions")
        %tile:count(count="ideas.recent[0].reactions_count" title="reactions")
    .content(ng-href="/ideas/{{ideas.recent[1].id}}")
      %tile:default(title="ideas.recent[1].name")
      .totals
        %tile:count(count="ideas.recent[1].idea_actions_count" title="actions")
        %tile:count(count="ideas.recent[1].reactions_count" title="reactions")
    %div
      %form(name='searchQuery' ng-submit="doSearch()")
        .search-text-wrapper
          %input(type='text' ng-model='query.text' size='30' placeholder='Search' mobile-focus-click)
        %input.btn(type="submit" value="Find") 