#idea.loading(ng-show="!showNewIdeaActionDialog" ng-class="identityClass(idea)")
  .header.main-header(ng-click = '$parent.resetToTop()')
    %h1
      Idea
    .touch-panel
      %a.touch-icon(ng-href="/home")
        %i.icon-home
    &nbsp;
  #idea-scroll.scrollable-content
    .scroller
      .tags
        %span.tag{'ng:repeat' => 'tag in idea.tags'}
          {{tag.name}}
      .content
        %p.description
          {{idea.description}}
        .action
          %p.action-count.pull-left
            {{idea.members_actioned_count}}
          %p.action-statement.pull-left
            People have taken action on this idea
          .pull-right(ng-show="twitter")
            %a.btn.btn-twitter(ng-external="{{twitter.url}}" href="{{twitter.url}}" target="_blank")
              %i.icon-twitter
              Tweet
      .sections
        %collapsible(title='Actions' type='action' collection='idea.idea_actions' item-template='assets/views/actions/action_collapsible_item.html')
          .center.row-fluid
            .span12
              %button#new-idea-action.btn.btn-large.btn-danger(ng-click="createNewIdeaAction(idea)")
                Suggest an action
        %collapsible(title='Reactions' type='reaction' collection='idea.reactions' item-template='assets/views/reactions/reaction_collapsible_item.html')
        %collapsible(title='Inspired by' type='talk' collection='idea.talks' item-template='assets/views/talks/talk_collapsible_item.html')
    %ng-include#new-idea-action-dialog(src="'assets/views/actions/new.html'" ng-controller='IdeaActionEditCtrl' ng-show='showNewIdeaActionDialog')
