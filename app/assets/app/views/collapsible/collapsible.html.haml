.collapsible.section(ng-class="{collapsed : !expanded, expanded: !!expanded}")
  .header(ng-click="expandCollapse()")
    %span.title
      {{title}}
      %sup
        {{collection_length}}
  .items(ng-show="!!expanded")
    .item(ng-repeat="item in collection")
      %ng:include(src="itemTemplate")
    .clear(ng-transclude)
