#login
  .header.main-header.follow-scroll(ng-click = '$parent.resetToTop()')
    Log In
    .home-page.pull-right(ng-href="/home")
      %i.icon-home
    &nbsp;
  .content
    .center
      %p Please login to Actionman to access administrative interface.
      #error-container
        {{memberSession.errorMsg}}
      %form(ng-submit="login()")
        .inputdata
          %label(for="username") Username:
          %input#username(type="text" ng-model="loginForm.username")

        .inputdata
          %label(for="password") Password:
          %input#password(type="password" ng-model="loginForm.password")
        %input#login-btn(type="Submit" value="Login")