.landing.loading
  .header.main-header(ng-click="scroller.scrollToPage(0, 0, 300)")
    %h1
      Events
    .touch-panel
      %a.touch-icon(ng-href="/home")
        %i.icon-home
  %scrollable
    .content
      .content-header Featured Event
      .content-item(ng-href="/events/{{events.featured[0].id}}")
        %tile:featured(title="events.featured[0].name" description="events.featured[0].description" img="events.featured[0].hero_image_url")
        .totals
          %tile:count(count="events.featured[0].ideas_count" title="ideas")
          %tile:count(count="events.featured[0].idea_actions_count" title="actions")
          %tile:count(count="events.featured[0].reactions_count" title="reactions")
    .content
      .content-header Popular Events
      .content-item(ng-href="/events/{{events.popular[0].id}}")
        %tile:default(title="events.popular[0].name")
        .totals
          %tile:count(count="events.popular[0].ideas_count" title="ideas")
          %tile:count(count="events.popular[0].idea_actions_count" title="actions")
          %tile:count(count="events.popular[0].reactions_count" title="reactions")
      .content-item(ng-href="/events/{{events.popular[1].id}}")
        %tile:default(title="events.popular[1].name")
        .totals
          %tile:count(count="events.popular[1].ideas_count" title="ideas")
          %tile:count(count="events.popular[1].idea_actions_count" title="actions")
          %tile:count(count="events.popular[1].reactions_count" title="reactions")
    .content
      .content-header Recent Events
      .content-item(ng-href="/events/{{events.recent[0].id}}")
        %tile:default(title="events.recent[0].name")
        .totals
          %tile:count(count="events.recent[0].ideas_count" title="ideas")
          %tile:count(count="events.recent[0].idea_actions_count" title="actions")
          %tile:count(count="events.recent[0].reactions_count" title="reactions")
      .content-item(ng-href="/events/{{events.recent[1].id}}")
        %tile:default(title="events.recent[1].name")
        .totals
          %tile:count(count="events.recent[1].ideas_count" title="ideas")
          %tile:count(count="events.recent[1].idea_actions_count" title="actions")
          %tile:count(count="events.recent[1].reactions_count" title="reactions")
      .content-button(ng-show="!extraEvents" ng-click="more()") Load more events
      .content-button(ng-show="extraEvents && extraEvents.length == 0")
        .extra-results-loading
    .content(ng-show="extraEvents && extraEvents.length != 0")
      .content-header More Events
      .content-item(ng-repeat='event in extraEvents' ng-href="/events/{{event.id}}")
        %tile:default(title="event.name")
        .totals
          %tile:count(count="event.ideas_count" title="ideas")
          %tile:count(count="event.idea_actions_count" title="actions")
          %tile:count(count="event.reactions_count" title="reactions")
    %search(scroller="scroller")