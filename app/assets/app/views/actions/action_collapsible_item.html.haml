%p {{item.description}}
%p.action-statement.pull-left
  %b {{item.members_actioned_count}} 
  %span People did this
%div.pull-right{'ng-switch on' => 'item.member_action_taken'}
  %button.btn.btn-small.btn-danger{'ng-switch-when' => 'null', 'ng-click' => 'doneIt(, item.id)', 'ng-controller' => 'ActionCtrl'} Do it
  %button.btn.btn-small.btn-danger{'ng-switch-default' => ''} You have done it!
