%div{ 'ng-controller' => 'IdeaActionCtrl' }
  %p {{item.description}}
  %p.action-statement.pull-left
    %b {{item.members_actioned_count}} 
    %span People did this
  %div.pull-right{'ng-switch on' => 'item.member_action_taken'}
    %button.btn.btn-danger.done-it{'ng-switch-when' => 'null', 'ng-click' => 'doneIt(item.id)'} Done it
    %p.action-statement{'ng-switch-default' => ''}
      %span You did on
      %b {{item.member_action_taken.created_at}} 
  .container
    .row-fluid.reaction{'id' => 'reaction-{{item.id}}', 'ng-controller' => 'ReactionCtrl'}
      .span12
        %textarea(placeholder = 'Add my reaction' name='reaction-text' mobile-focus-click)
      .span4.offset8
        %button.btn.btn-large.btn-danger.submit-reaction{'ng-click' => 'react(item.idea_id, item.id)'} Add my reaction
